[user]
    name = Tarik
    email = tarik.amar@gmail.com

[color]
    ui = true

[alias]
    st   = status -sbuno
    br   = branch
    ci   = commit
    co   = checkout
    lg   = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %ar)%Creset'
    last = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %ar)%Creset' -n 1

[core]
    pager = less
    editor = vim
    whitespace = -trailing-space

[diff]
    mnemonicPrefix = true
    wordRegex = .

[fetch]
    recurseSubmodules = on-demand

[grep]
    extendedRegexp = true

[log]
    abbrevCommit = true

[merge]
    conflictStyle = diff3

[mergetool]
    keepBackup = false
    keepTemporaries = false
    prompt = false

[pull]
    # This is GREATâ€¦ when you know what you're doing and are careful
    # not to pull --no-rebase over a local line containing a true merge.
    # rebase = true

[push]
    default = upstream

[rerere]
    # 'Reuse Recorded Resolution'

    enabled = true

    # add to index automatically
    # autoupdate = true

[status]
    submoduleSummary = true
